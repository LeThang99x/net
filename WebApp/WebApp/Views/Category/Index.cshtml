@model List<WebApp.Models.Category>
   @*<script src="~/js/jquery-3.5.1.min.js"></script>*@
 <a href="/category/create">create</a>
 <form action="/category/delall" method="post">
     <table class="table table-bordered bg-success">
         <thead class="thead-dark">
             <tr>
                  <td><button>Delete</button></td>
                 <th>Id</th>
                 <th>Name</th>
                 <th>Delete</th>
                 <th>Edit</th>
             </tr>
         </thead>
         <tbody>
             @foreach (WebApp.Models.Category item in Model)
             {
                 <tr class="text-white">
                     <td><input type="checkbox" name="a" value="@item.Id" /></td>
                     <td>@item.Id</td>
                     <td>@item.Name</td>
                     <td>
                         <a class="d" href="/category/delete/@item.Id">Delelte</a>
                     </td>
                     <td>
                         <a href="/category/edit/@item.Id">Edit</a>
                     </td>
                 </tr>
             }
         </tbody>
     </table>
 </form>
<script>
    $('.d').click(function () {
        var name = $(this).parent('td').prev().text();
        console.log($(this).parent('td').prev().text());
        return confirm(`are you sure delete ${name}?`);
        //return false;
    });
</script>