<form method="post">
    <div class="md-3">
        <label>Name</label>
        <input class="form-control" type="text" name="name" required />
    </div>
    <div class="md-3">
        <label>Category</label>
        <select name="categoryId">
           @foreach (WebApp.Models.Category item in ViewBag.categories)
           {
               <option value="@item.Id">@item.Name</option>
           }
        </select>
    </div>
    <div class="md-3">
        <label>Brand</label>
        <select name="BrandId">
        @foreach (WebApp.Models.Brand item in ViewBag.brands)
        {
            <option value="@item.Id">@item.Name</option>
        }
        </select>
    </div>
    <div class="md-3">
        <label>Price</label>

        <input class="form-control" type="number" step="0.01" name="Price" required/>
    </div>
    <div class="md-3">
        <label>ModelYear</label>
        <input class="form-control" type="number" min="1990" max="2050" name="ModelYear" required/>
    </div>
    <div><button>save changes</button></div>
</form>