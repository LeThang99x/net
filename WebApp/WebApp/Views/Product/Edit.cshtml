        <input class="form-control" type="number" step="0.01" name="Price" value="@Model.Price" required/>
    </div>
    <div class="md-3">
        <label>ModelYear</label>
        <input class="form-control" min="1990" max="2050" type="number" name="ModelYear" value="@Model.ModelYear" required/>
    </div>
    <div><button>save changes</button></div>
</form>
<script>
    $(frm['categoryId']).val(@Model.CategoryId)
    $(frm['brandId']).val(@Model.BrandId)
</script>