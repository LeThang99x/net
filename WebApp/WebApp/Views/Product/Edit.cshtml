    </div>
    <div class="md-3">
        <label>Category</label>
        <select name="categoryId">

            @foreach (WebApp.Models.Category item in ViewBag.categories)
            {
                @*if (@item.Id == Model.CategoryId)
            {
                <option selected value="@item.Id">@item.Name</option>

            }
            else
            {
                <option value="@item.Id">@item.Name</option>
            }*@

                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <div class="md-3">
        <label>Brand</label>
        <select name="brandId">
            @foreach (WebApp.Models.Brand item in ViewBag.brands)
